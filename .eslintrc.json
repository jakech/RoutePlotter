{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true,
        "jest": true
    },
    "plugins": ["prettier"],
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 2017
    },
    "rules": {
        "prettier/prettier": [
            "error",
            { "singleQuote": true, "tabWidth": 4, "semi": false }
        ]
    },
    "globals": {
        "google": false
    }
}
